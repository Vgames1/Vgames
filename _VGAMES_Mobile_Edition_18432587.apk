<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loading VGAMES APK</title>
    <style>
        /* Reset styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body, html {
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, red, green);
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
        }

        .loading-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
        }

        h1 {
            font-size: 2em;
            text-shadow: 2px 2px 10px gold, -2px -2px 10px lightgreen;
            animation: textGlow 2s ease-in-out infinite alternate;
        }

        @keyframes textGlow {
            0% { text-shadow: 2px 2px 10px gold, -2px -2px 10px red; }
            100% { text-shadow: 2px 2px 15px white, -2px -2px 15px green; }
        }

        .spinner {
            width: 50px;
            height: 50px;
            border: 5px solid white;
            border-top: 5px solid gold;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        .snowflakes {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
        }

        .snowflake {
            position: absolute;
            top: -10px;
            color: white;
            font-size: 1.5em;
            user-select: none;
            animation: fall linear infinite;
        }

        @keyframes fall {
            from { transform: translateY(-10px); opacity: 1; }
            to { transform: translateY(110vh); opacity: 0.7; }
        }
    </style>
</head>
<body>
    <div class="snowflakes" aria-hidden="true">
        <!-- Multiple snowflakes -->
        <div class="snowflake" style="left: 10%; animation-duration: 8s;">❄</div>
        <div class="snowflake" style="left: 20%; animation-duration: 6s;">❄</div>
        <div class="snowflake" style="left: 30%; animation-duration: 10s;">❄</div>
        <div class="snowflake" style="left: 40%; animation-duration: 7s;">❄</div>
        <div class="snowflake" style="left: 50%; animation-duration: 9s;">❄</div>
        <div class="snowflake" style="left: 60%; animation-duration: 5s;">❄</div>
        <div class="snowflake" style="left: 70%; animation-duration: 8s;">❄</div>
        <div class="snowflake" style="left: 80%; animation-duration: 6s;">❄</div>
        <div class="snowflake" style="left: 90%; animation-duration: 10s;">❄</div>
    </div>

    <div class="loading-container">
        <h1>Loading VGAMES Mobile Edition...</h1>
        <div class="spinner"></div>
    </div>

    <script>
        // Redirect to the APK after 5 seconds
        setTimeout(() => {
            window.location.href = "https://files.appsgeyser.com/VGAMES%20Mobile%20Edition_18432587.apk";
        }, 5000);
    </script>
</body>
</html>
